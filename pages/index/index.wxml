<!--index.wxml-->
<scroll-view scroll-y scroll-with-animation>
<view class="container">
  <view class='header'>
    <!-- <view class='hello'>
      
      <open-data type="userNickName"></open-data>
      <text class='text'>，早上好</text>
    </view> -->
    <view class='community'>
      <text class='text'>佳兆业第二期</text>

      <text class="switch-link">切换</text>
    </view>
  </view>

  <view class='banner'>
    <swiper
      indicator-dots="{{indicatorDots}}"
      autoplay="{{autoplay}}"
      interval="{{interval}}"
      duration="{{duration}}"
    >
      <block wx:for="{{imgUrls}}">
        <swiper-item>
          <image src="{{item}}" class="slide-image" width="375" height="150" />
        </swiper-item>
      </block>
    </swiper>
  </view>

  <view class='function-btns-group'>
    <view class='item'>
    <view class='icon'>
        <image src='/images/pay.png' width='30' height='30'/>
      </view>
    <text>缴费</text>
    </view>
    <view class='item'>
    <view class='icon'>
        <image src='/images/suggest.png' width='30' height='30'/>
      </view>
    <text>报修</text>
    </view>
    <view class='item'>
    <view class='icon'>
        <image src='/images/bill.png' width='30' height='30'/>
      </view>
    <text>房屋账单</text>
    </view>
    <view class='item'>
    <view class='icon'>
        <image src='/images/suggest.png' width='30' height='30'/>
      </view>
    <text>投诉与建议</text>
    </view>
  </view>

  <view class='border'></view>

  <!-- <view class='tips'>
    <text>有新的议案提醒 {{tipsNum}} 条</text>
  </view> -->

  <view class='notice'>
    <view class='frame-left'>
      <view class='title'>
        小区公告
      </view>
      <view class='notice-content'>
        查看往期小区公告
      </view>
    </view>
    <view class='frame-right'>></view>
  </view>

  <view class='sun-property'>
    <view class='header'>
      <view class='icon'>
        <image src='/images/house.png'></image>
      </view>
      <view class='text'>
        <text class='title'>
          阳光物业
        </text>
        <text class='sub-title'>
        物业服务一目了然
        </text>
      </view>
    </view>

    <scroll-view class='body' scroll-x>
      <view class='item finance-item'>
        <view class='title text'>小区总经费</view>
        <view class='desc text'>小区物业金额/ 元</view>
        <view class='value text'>40093</view>
        <view class='btn'>查看详情</view>
      </view>
      <view class='item team-item'>
        <view class='title text'>服务团队</view>
        <view class='desc text'>服务满意度/ 分</view>
        <view class='value text'>4.7</view>
        <view class='btn'>查看详情</view>
      </view>
      <view class='item fix-item'>
        <view class='title text'>设备维修</view>
        <view class='desc text'>完成维保/ 台</view>
        <view class='value text'>40093</view>
        <view class='btn'>查看详情</view>
      </view>
    </scroll-view>
  </view>
  </view>
</scroll-view>
